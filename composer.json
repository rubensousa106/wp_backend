{
  "repositories": [
    {
      "type": "composer",
      "url": "https://repo.packagist.org",
      "options": {
        "ssl": {
          "verify_peer": false,
          "allow_self_signed": true,
          "cafile": "C:/xampp/php/extras/ssl/cacert.pem",
          "capath": "C:/xampp/php/extras/ssl"
        }
      }
    }
  ],
  "require": {
    "ext-pdo": "*",
    "ext-json": "*",
    "guzzlehttp/guzzle": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
